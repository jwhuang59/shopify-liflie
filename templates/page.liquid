var lbnav = function(){
	return {
		pclick:function(num){
			var n = 0;
			var len = $(".lb-part"+num+" li").length; 
			var   auto = setInterval(function(){ 
				if(n < len-1){ 
					n ++; 
				}else{ 
					n = 0;
				}
				lbnav.autoplay(n,num); 
				},5000);
			
			$(".lb-part"+num).find("span").each(function(item){ 
				$(this).click(function(){ 
					clearInterval(auto);
					lbnav.autoplay(item,num);
					 n = item;
					  auto = setInterval(function(){ 
						if(n < len-1){ 
							n ++;
						}else{ 
							n = 0;
						}
						lbnav.autoplay(n,num);
					},5000);
					
				});
		
			});
			

		},
		autoplay:function(obj,num){
			
			$(".lb-part"+num).find("span").eq(obj).addClass("active").siblings().removeClass("active")
			$(".lb-part"+num).find("li").eq(obj).stop().fadeIn(500).siblings().fadeOut(500)

		}

	}


}();


$(".know .know-content .part2 .box-content h1").click(function(){

	x = ($(this).parent(".know .know-content .box-content").index()-1)/2; 

	$("html,body").animate({scrollTop:$(".know .know-content .box-content").eq(x).offset().top},300)

	if($(this).hasClass("on")){
		$(this).removeClass("on");
		$(".know .know-content .box-content .content").stop().slideUp(300)

	}else{
		$(".know .know-content .box-content h1").removeClass("on")
		$(this).addClass("on").siblings().removeClass("on");
		$(".know .know-content .box-content .content").stop().slideUp(300);
		$(".know .know-content .box-content").eq(x).children(".content").stop().slideDown(300);
	}
})

    
