  $(".site-wrapper .site-box .site-city li table td a").click(function(){
		var index = $(this).parent("td").index();
		var i = $(this).parent().parent("tr").index();
		
		$(".site-wrapper .site-box .site-city .city-name").eq(index+7*i).addClass("city-show").siblings().removeClass("city-show")
		$(".site-wrapper .site-box .site-city .site-allcity").eq(index+7*i).addClass("site-show").siblings().removeClass("site-show")
		$(".site-wrapper .site-box .site-city .site-allcity").eq(index+7*i).fadeIn(1000).siblings().fadeOut(100)
		$(".site-wrapper .site-box .site-city li table tr td").removeClass("active")
		$(this).parent("td").addClass("active")
	})

	$(".site-wrapper .site-box .site-city .city-name span").click(function(){
		var index = $(this).index();

		$(this).addClass("active").siblings().removeClass("active")
		$(".site-wrapper .site-box .site-city .site-show ol").eq(index).fadeIn(1000).siblings().fadeOut(100)
	})

    

